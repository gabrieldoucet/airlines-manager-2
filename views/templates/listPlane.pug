div.row
  div.col-sm-11
    h5 {{title}}
  div.col-sm-1
    i.fas(ng-click="toggle()", ng-class="show ? 'fa-chevron-down' : 'fa-chevron-right'")

div.row(ng-show="show")
  div.col-sm-12
    a.badge(href="", style="margin-right: 2px", ng-repeat="plane in planes track by $index", ng-click="choosePlane(plane)", ng-class="isPlaneOptimised(plane, 'listPlane') ? 'badge-success' : 'badge-dark'") {{plane.name}}
    h6.text-muted(ng-show="planes.length == 0") No planes to display
