div(class="panel panel-default")
  div(class="panel-heading") {{header}}
    span(ng-class="getArrowClass()", aria-hidden="true", ng-click="headerClick()")
    span(class="badge") {{lines.length}}
    span(class="btn btn-default", aria-hidden="true", ng-click="showAdd()", ng-if="enableAdd") Ajouter
  

  div(class="panel-body", ng-if="open && (lines === undefined || lines.length == 0)")
    p Aucun rÃ©sultat
  
  table(class="table table-striped", ng-if="open && lines.length > 0")
    thead
      tr
        th 
        th Origine
        th Destination
        th Distance
        th Demande
        th Avions
      
    tbody
      tr(ng-repeat="line in lines")
        td
          div
            span(class="glyphicon glyphicon-eye-open",
                aria-hidden="true",
                ng-click="selectLine(line)",
                ng-if="enableSelect")
        td {{line.from}}
        td {{line.to}}
        td {{line.distance}}
        td {{line.demand.eco}} / {{line.demand.business}} / {{line.demand.first}} / {{line.demand.cargo}}
        td 
          div(ng-repeat="plane in line.planes")
            plane-label(title="plane.name", line="line")